# Translation Repository Configuration
# Copy this file to .env and fill in your actual values

# Absolute path to the translation repository
TRANSLATION_REPO_PATH=/Users/username/dev/translations

# Relative path to the translation file within the repository
TRANSLATION_FILE=i18n/en/translations.json

# Base branch to compare against (default: origin/master)
BASE_BRANCH=origin/master

# ==============================================================================
# Jira Cloud Configuration (REQUIRED)
# ==============================================================================

# Your Jira Cloud base URL (without trailing slash)
JIRA_BASE_URL=https://your-company.atlassian.net

# Your Jira email address
JIRA_EMAIL=your.email@example.com

# Your Jira API token (generate at https://id.atlassian.com/manage-profile/security/api-tokens)
JIRA_API_TOKEN=your_api_token_here

# Jira project ID (numeric ID, e.g., 10000)
JIRA_PROJECT_ID=10000

# Jira issue type ID (numeric ID for the issue type, e.g., 10001)
JIRA_ISSUE_TYPE_ID=10001

# Email of the user to assign the task to (optional)
JIRA_ASSIGNEE_EMAIL=assignee@example.com

# Email of the user to set as reporter (optional)
JIRA_REPORTER_EMAIL=reporter@example.com
